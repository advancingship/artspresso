{
    "builders": [{
	"type": "docker",
	"image": "ubuntu:16.04",
	"export_path": "image.tar"
    }],
    "provisioners" : [
	{
	    "type": "shell",
	    "inline": [
		"sleep 30",
		"apt-get update",
		"apt-get install -y sudo",
		"sudo apt-get update",
		"sudo apt-get install -y curl",
		"sudo useradd -d /home/artspresso -m artspresso -p artspresso",
		"curl -sL https://deb.nodesource.com/setup_10.x | sudo -E bash -",
		"sudo apt-get install -y nodejs",
		"mkdir -p /home/artspresso/services/",
		"sudo mkdir -p /tmp/goss/test"		
	    ]
	},{
	    "type": "file",
	    "source": "/home/colin/all/artspresso/20190911.200000/repo/cloud/test",
	    "destination": "/home/artspresso/"
	},{
	    "type": "shell",
	    "inline": [
		"cd /home/artspresso"
	    ]
	},{
	    "type": "file",
	    "source": "/home/colin/all/artspresso/20190911.200000/repo/cloud/test/goss.yaml",
	    "destination": "/home/artspresso/goss.yaml"
	},{
	    "type": "file",
	    "source": "/home/colin/all/artspresso/20190911.200000/repo/front-end",
	    "destination": "/home/artspresso/services/"
	},{ "type": "shell",
	    "inline": [
		"cd /home/artspresso/services/front-end",
		"npm install --save react-bootstrap bootstrap node-sass",
		"npm install --save @testing-library/jest-dom"			    ]
	  },{
	    "type": "goss",
	    "tests": [
		"/home/colin/all/artspresso/20190911.200000/repo/cloud/test/goss.yaml"
	    ]
	}
    ],
    "post-processors": [
	{
	    "type": "manifest",
	    "output": "manifest.json",
	    "strip_path": true
	}
    ]
}
